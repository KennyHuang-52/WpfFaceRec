<Window x:Class="WpfFaceRec.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Face Detection + Auto White Balance"
        Height="480" Width="640"
        Closing="Window_Closing">
    <Grid>
        <!-- 顯示即時影像 -->
        <Image Name="CameraImage" Stretch="Uniform" />

        <!-- 白平衡強度滑桿 -->
        <Slider Name="AWBGainSlider"
                Minimum="0.0" Maximum="2.0" Value="1.0"
                VerticalAlignment="Bottom" Margin="10" Height="30"
                ToolTip="白平衡強度" />
    </Grid>
</Window>